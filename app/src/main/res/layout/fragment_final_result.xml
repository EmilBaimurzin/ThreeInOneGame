<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background04"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/background06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/game2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/background09"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/game3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/background12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="377dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/text_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:textSize="23dp"
            android:layout_marginTop="50dp"
            style="@style/BasicText"
            android:text="@string/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/score"
            android:paddingBottom="3dp"
            android:textSize="20sp"
            android:text="2000"
            style="@style/BasicText"
            android:layout_marginTop="5dp"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:background="@drawable/score02"/>

        <TextView
            android:textSize="23dp"
            android:layout_marginTop="25dp"
            style="@style/BasicText"
            android:text="@string/best_nresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/best_score"
            android:paddingBottom="3dp"
            android:textSize="20sp"
            android:text="2000"
            style="@style/BasicText"
            android:layout_marginTop="5dp"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:background="@drawable/score02"/>
        
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.three.game.core.library.CustomImageButton
                android:id="@+id/restart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/restart"/>
            
            <com.three.game.core.library.CustomImageButton
                android:id="@+id/menu"
                android:layout_marginStart="50dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/menu"/>
            
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>