<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/foreground"
        android:src="@drawable/background01"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.three.game.core.library.CustomImageButton
            android:src="@drawable/game01"
            android:id="@+id/game01"
            android:layout_width="300dp"
            android:layout_height="90dp"/>

        <com.three.game.core.library.CustomImageButton
            android:src="@drawable/game02"
            android:id="@+id/game02"
            android:layout_width="300dp"
            android:layout_height="90dp"/>

        <com.three.game.core.library.CustomImageButton
            android:src="@drawable/game03"
            android:id="@+id/game03"
            android:layout_width="300dp"
            android:layout_height="90dp"/>

        <com.three.game.core.library.CustomImageButton
            android:layout_marginTop="10dp"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_width="260dp"
            android:layout_height="80dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>